<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PreferenciasActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp"
        android:gravity="">

        <!-- CheckBox para Receber Notificações -->

        <!-- CheckBox para Modo Escuro -->
        <CheckBox
            android:id="@+id/checkBoxNotificacoes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:text="Receber notificações" />

        <!-- CheckBox para Lembrar Login -->

        <CheckBox
            android:id="@+id/checkBoxModoEscuro"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:text="Modo escuro" />

        <CheckBox
            android:id="@+id/checkBoxLembrarLogin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Lembrar login"
            android:layout_marginBottom="16dp"/>

        <!-- Botão para Salvar Preferências -->
        <Button
            android:id="@+id/buttonSalvarPreferencias"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Salvar Preferências"
            android:layout_gravity="center_horizontal"/>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>